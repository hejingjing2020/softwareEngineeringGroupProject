<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginTop="-4dp"
            android:adjustViewBounds="true"
            android:background="#00B38787"
            android:cropToPadding="false"
            android:src="@drawable/xiaohui"
            app:srcCompat="@drawable/xiaohui" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/course_evaluation_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_weight="2.5"
        android:background="@drawable/shape_corner"
        android:backgroundTint="#654EA3"
        android:orientation="vertical"
        android:textSize="25dp"
        android:typeface="serif">

        <TextView
            android:id="@+id/textViewCourseEvaluation"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Course Evaluation"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="55dp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:text="Discover the course you would like to know"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:typeface="serif" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.1"
            android:background="?android:attr/listDivider"
            android:outlineSpotShadowColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recruit_page"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_weight="2.5"
        android:background="@drawable/shape_corner"
        android:backgroundTint="#654EA3"
        android:orientation="vertical"
        android:text="recruit"
        android:textSize="25dp">

        <TextView
            android:id="@+id/textViewRercruitment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Recruitment"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="55dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Be a part of University intern staff group"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#333333" />


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--第一个RadioButton-->
            <RadioButton
                android:id="@+id/button_main_page"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:button="@null"
                android:buttonTint="#FFFFFF"
                android:drawableTop="@drawable/pic_home"
                android:gravity="center"
                android:text="Main Page"

                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />
            <!--第二个RadioButton-->
            <!--第三个RadioButton-->
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />

            <RadioButton
                android:id="@+id/button_self_center"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:background="#6FD1DCE3"
                android:button="@null"
                android:buttonTint="#004527A0"
                android:drawableTop="@drawable/pic_my"
                android:gravity="center"
                android:text="Self Center"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>






