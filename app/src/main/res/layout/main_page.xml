<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttonColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginTop="-4dp"
            android:src="@drawable/xiaohui" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:src="@drawable/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/course_evaluation_page"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_weight="2.5"
            android:backgroundTint="#99CEE6"
            android:text="Course evaluation" />

        <Button
            android:id="@+id/recruit_page"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_weight="2.5"
            android:backgroundTint="#99CEE6"
            android:text="recruit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#333333" />


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--第一个RadioButton-->
            <RadioButton
                android:id="@+id/button_main_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:button="@null"
                android:buttonTint="#FFFFFF"
                android:drawableTop="@drawable/pic_home"
                android:gravity="center"
                android:text="Main Page"

                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />
            <!--第二个RadioButton-->
            <!--第三个RadioButton-->
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />

            <RadioButton
                android:id="@+id/button_self_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#6FD1DCE3"
                android:button="@null"
                android:buttonTint="#004527A0"
                android:drawableTop="@drawable/pic_my"
                android:gravity="center"
                android:text="Self Center"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>




