<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:orientation="vertical"
    tools:context="page.page1.main_page">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="0dp"
        android:background="@color/purple"
        android:gravity="center"
        android:text="LHS"
        android:textColor="#000000"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/kind_list1"
            android:layout_width="match_parent"
            android:layout_height="606dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#333333" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--第一个RadioButton-->
            <RadioButton
                android:id="@+id/button_main_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:button="@null"
                android:buttonTint="#FFFFFF"
                android:drawableTop="@drawable/pic_home"
                android:gravity="center"
                android:text="Main Page"

                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />
            <!--第二个RadioButton-->
            <!--第三个RadioButton-->
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />

            <RadioButton
                android:id="@+id/button_self_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#6FD1DCE3"
                android:button="@null"
                android:buttonTint="#004527A0"
                android:drawableTop="@drawable/pic_my"
                android:gravity="center"
                android:text="Self Center"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>